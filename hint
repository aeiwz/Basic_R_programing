# Variables and Data Types
`age <- 25
name <- "John"
is_student <- TRUE`

# Display values of variables
print(age)
print(name)
print(is_student)

# Basic Operations
num1 <- 10
num2 <- 5

# Calculate and display results
sum_result <- num1 + num2
diff_result <- num1 - num2
prod_result <- num1 * num2
quotient_result <- num1 / num2

print(sum_result)
print(diff_result)
print(prod_result)
print(quotient_result)

# Data Manipulation
my_vector <- 1:10

# Extract elements at specific indices
extracted_elements <- my_vector[c(3, 5, 8)]

# Calculate mean and median
mean_result <- mean(my_vector)
median_result <- median(my_vector)

# Display results
print(extracted_elements)
print(mean_result)
print(median_result)

# Conditional Statements
score <- 75

# Check if score is greater than or equal to 60
if (score >= 60) {
  print("Pass")
} else {
  print("Fail")
}

# Loops
# For loop
for (i in 1:5) {
  print(i)
}

# While loop
counter <- 1
while (counter <= 5) {
  print(counter)
  counter <- counter + 1
}

# Functions
# Define square function
square <- function(x) {
  return(x^2)
}

# Use square function
result_square <- square(6)
print(result_square)
